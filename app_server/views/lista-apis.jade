include _includes/sharedHTMLfunctions

extends layout

block content
      #lista.container-fluid
      .text-center
        h2= cabecera.titulo
        h4= cabecera.subtitulo
      .row
        .error.text-center= mensaje
        each api in listaApis
          .col-sm-4
            .panel.panel-default.text-center
              .panel-heading
                h2= api.nombre
              .panel-body
                img.center-block(src=api.imagen, alt='', width='300', height='260')
              .panel-footer
                h3 Opiniones
                each recomendacion in api.recomendaciones
                  strong=recomendacion.autor
                    |&nbsp;
                    |&nbsp;
                    +formatDate(recomendacion.creado)
                  p=recomendacion.comentario
                    |&nbsp;
                    |&nbsp;
                  p
                    +escribirPuntuacion(recomendacion.puntuacion)
                
                hr(width="100%")
                p Media:
                  |&nbsp;
                  +escribirPuntuacion(api.puntuacion)

                a.btn.btn-lg(href="/rest_api/#{api._id}") Entrar
                
        